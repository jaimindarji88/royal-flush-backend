{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "es2017",
      "dom"
    ],
    "downlevelIteration": true
  },
  "exclude": [
    "tests",
    "node_modules"
  ],
  "compileOnSave": true
}