{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2017", "dom"],
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "exclude": ["tests", "node_modules", "dist", "nit"],
  "compileOnSave": true
}
