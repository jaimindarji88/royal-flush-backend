{
  "name": "royal-flush",
  "version": "1.0.1",
  "description": "poker odds api running using nodejs and pokerstove",
  "main": "index.js",
  "author": "jaimin darji",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test-watch": "jest -o",
    "test": "jest",
    "tsc": "tsc",
    "band": "rm -rf dist && npm run tsc && npm run deploy",
    "build-nit": "cd nit && npm i && npm run build",
    "deploy": "tsc && sls deploy -v",
    "watch-sls": "sls offline start --skipCacheInvalidation --port 8080",
    "watch-tsc": "tsc -w",
    "start": "nodemon --exec npm run watch-sls"
  },
  "dependencies": {
    "es-iter": "^1.1.1",
    "joi": "^13.7.0",
    "lodash": "^4.17.21",
    "merge": "^1.2.1",
    "random-js": "^1.0.8",
    "serverless": "^1.45.1",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.27",
    "@types/core-js": "^2.5.1",
    "@types/jest": "^23.3.14",
    "@types/joi": "^13.6.3",
    "@types/lodash": "^4.14.134",
    "@types/node": "^10.14.9",
    "@types/random-js": "^1.0.30",
    "@types/shelljs": "^0.8.5",
    "concurrently": "^4.1.0",
    "jest": "^23.5.0",
    "nodemon": "^1.19.1",
    "serverless-offline": "^3.33.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/tests/"
    ]
  }
}
